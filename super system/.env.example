# Sports Analytics Platform Environment Variables

# The Odds API (https://the-odds-api.com/)
ODDS_API_KEY=your_odds_api_key_here

# Kalshi API (https://kalshi.com/)
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_API_SECRET=your_kalshi_api_secret_here

# Polymarket API (https://polymarket.com/)
POLYMARKET_API_KEY=your_polymarket_api_key_here

# Database configuration (optional)
DATABASE_URL=sqlite:///sports_analytics.db

# Logging configuration
LOG_LEVEL=INFO
DEBUG=false

# Cache settings
CACHE_TTL_SECONDS=300

# Rate limiting
REQUESTS_PER_MINUTE=60

# UI settings (for future web interface)
UI_HOST=0.0.0.0
UI_PORT=5000